<h1>The Gallary</h1>
<!-- Loop over each object in the projects array -->
{{#each paintings as |painting| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{painting.id}}">{{painting.title}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ğŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
       <span class="dollar-amount">{{format_amount painting.needed_funding}}</span> 
      {{!-- needed! --}}
    </p>
    <p>Created by {{painting.user.name}} on {{format_date painting.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{painting.description}}
    </p>
  </div>
</div>
{{/each}}
