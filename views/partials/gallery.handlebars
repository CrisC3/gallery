<section>
    <div class="card">
    <div class="card-image image-left">
        <figure class="image is-4by3">
            <img src="{{image_data}}" alt="Placeholder image">
        </figure>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-content">
                <p class="title is-4">Title: {{title}}</p>
                <p class="subtitle is-6">Artist Name: {{Users.[0].first_name}} {{Users.[0].last_name}}</p>
            </div>
        </div>
        <div class="content">
            <p class="title is-4">Details:</p><p>{{details}}</p>
            <h3>Price: {{format_price painting_procurements.[0].price}}</h3>
            <br>
            <h2>Categories</h2>
            {{#each Categories as |Category| }}
                {{#each Category as |Single|}}
                    <li>{{Single}}</li>
                {{/each}}
            {{/each}}
            <h2>Tags</h2>
            {{#each Tags as |Tag| }}
                {{#each Tag as |Single|}}
                    <li>{{Single}}</li>
                {{/each}}
            {{/each}}
            <br>
            {{!-- <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time> --}}
        </div>
        <a href='/sale/{{id}}'><button class="button is-primary" type='submit'>Purchase</button></a>
    </div>
</div>
</section>